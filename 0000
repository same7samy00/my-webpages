    <script>
        // Notification Panel Toggle
        const notificationBtn = document.getElementById('notificationBtn');
        const notificationPanel = document.getElementById('notificationPanel');
        const closeNotifications = document.getElementById('closeNotifications');
        
        notificationBtn.addEventListener('click', () => {
            notificationPanel.classList.add('active');
        });
        
        closeNotifications.addEventListener('click', () => {
            notificationPanel.classList.remove('active');
        });
        
        // Balance Refresh Animation
        const refreshBalance = document.getElementById('refreshBalance');
        const balanceSpinner = document.getElementById('balanceSpinner');
        
        refreshBalance.addEventListener('click', () => {
            const icon = refreshBalance.querySelector('i');
            icon.style.display = 'none';
            balanceSpinner.style.display = 'block';
            
            setTimeout(() => {
                balanceSpinner.style.display = 'none';
                icon.style.display = 'block';
            }, 1500);
        });

        // Transfer Modal
        const transferBtn = document.getElementById('transferBtn');
        const transferModal = document.getElementById('transferModal');
        const closeTransfer = document.getElementById('closeTransfer');
        const transferForm = document.getElementById('transferForm');
        const accountNumber = document.getElementById('accountNumber');
        const amount = document.getElementById('amount');
        const accountError = document.getElementById('accountError');
        const amountError = document.getElementById('amountError');

        transferBtn.addEventListener('click', () => {
            transferModal.classList.add('active');
        });

        closeTransfer.addEventListener('click', () => {
            transferModal.classList.remove('active');
            resetForm();
        });

        // Form validation
        accountNumber.addEventListener('input', () => {
            const value = accountNumber.value.replace(/\D/g, '');
            accountNumber.value = value;
            
            if (value.length === 8) {
                accountNumber.classList.remove('error');
                accountError.style.display = 'none';
            } else {
                accountNumber.classList.add('error');
                accountError.style.display = 'block';
            }
        });

        amount.addEventListener('input', () => {
            const value = parseInt(amount.value);
            
            if (value >= 10 && value <= 20000) {
                amount.classList.remove('error');
                amountError.style.display = 'none';
            } else {
                amount.classList.add('error');
                amountError.style.display = 'block';
            }
        });

        transferForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const accountValue = accountNumber.value;
            const amountValue = parseInt(amount.value);
            
            if (accountValue.length === 8 && amountValue >= 10 && amountValue <= 20000) {
                showModal('exclamation-triangle', 'تنبيه', 'لا يوجد رصيد كافي');
            }
        });

        function resetForm() {
            transferForm.reset();
            accountNumber.classList.remove('error');
            amount.classList.remove('error');
            accountError.style.display = 'none';
            amountError.style.display = 'none';
        }

        // Modal functions
        const modalOverlay = document.getElementById('modalOverlay');
        const modalIcon = document.getElementById('modalIcon');
        const modalTitle = document.getElementById('modalTitle');
        const modalMessage = document.getElementById('modalMessage');
        const modalCloseBtn = document.getElementById('modalCloseBtn');

        function showModal(icon, title, message) {
            modalIcon.className = `fas fa-${icon}`;
            modalTitle.textContent = title;
            modalMessage.textContent = message;
            modalOverlay.classList.add('active');
        }

        modalCloseBtn.addEventListener('click', () => {
            modalOverlay.classList.remove('active');
        });

        modalOverlay.addEventListener('click', (e) => {
            if (e.target === modalOverlay) {
                modalOverlay.classList.remove('active');
            }
        });

        // Statistics and Deposits buttons
        const statisticsBtn = document.getElementById('statisticsBtn');
        const depositsBtn = document.getElementById('depositsBtn');

        statisticsBtn.addEventListener('click', () => {
            showModal('chart-bar', 'الإحصائيات', 'لا توجد معاملات لعرض الإحصائيات');
        });

        depositsBtn.addEventListener('click', () => {
            showModal('money-bill-wave', 'الإيداعات', 'لا توجد معاملات إيداع');
        });
        
        // Function to change promo banner
        function changePromoBanner(url) {
            document.getElementById('promoBanner').src = url;
        }
    </script>
</body>
</html>
